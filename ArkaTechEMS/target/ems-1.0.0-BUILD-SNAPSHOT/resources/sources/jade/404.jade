extends  _skeleton

block variables

block title
  title 404 Page Not Found

block page
  // Page Header
  include _header

  // Page Content
  main.page-content
    +heading('404 Page Not Found')
    +breadcrumbs([['404']])

    // 404
    section.section-top-55.section-bottom-85
      .shell.text-center
        .range.range-xs-center
          .cell-xs-12.cell-sm-8.cell-md-6.cell-lg-5
            .inset-sm-left-15.inset-sm-right-15
              .icon.icon-xxl.icon-aqua-haze.fa-frown-o
              h3.offset-top-5 Sorry, but page was not found
              p.text-gray-base.offset-top-19.
                The page requested couldn't be found - this could be due
                to a spelling error in the URL or a removed page.

              form.rd-search.offset-top-30(action="search-results.html", method="GET", data-search-live="rd-search-results-live-1")
                .form-group
                  label(for="rd-search-form-input-1", class="form-label") Search...
                  input(id="rd-search-form-input-1", class="form-control",  type="text", name="s", autocomplete="off")
                  #rd-search-results-live-1.rd-search-results-live
                button.rd-search-submit(type='submit')
    ='\n'

  // Page Footer
  include _footer